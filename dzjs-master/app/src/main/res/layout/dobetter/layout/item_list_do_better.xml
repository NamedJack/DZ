<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <LinearLayout
        android:id="@+id/item_honer_bgll"
        android:paddingLeft="15dp"
        android:background="@drawable/person_honer_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_honer_title"
            android:paddingTop="10dp"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:text="无憾人生"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"/>
        <TextView
            android:id="@+id/person_honer_time"
            android:textSize="18sp"
            android:text="2017-6-20"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/person_honer_story"
                android:paddingBottom="50dp"
                android:textSize="18sp"
                android:text="fafafafafafafafafaf"
                android:paddingTop="15dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <RelativeLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <com.wongxd.partymanage.styleParty.view.RectImageView
                    android:id="@+id/personal_honer_img"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/test_rect_image"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_toLeftOf="@id/personal_honer_img"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/personal_honer_text"
                    android:text="个人荣誉"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="75dp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>