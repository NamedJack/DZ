<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:sw="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightgray">

    <LinearLayout
        android:id="@+id/better_base_ll_bg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/person_honer_bg"
        android:orientation="horizontal"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/person_honer_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"

                android:paddingBottom="5dp"
                android:text="最是情怀能动人"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/person_honer_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="2017-05-05" />

            <TextView
                android:id="@+id/personal_honer_text"
                android:gravity="center_vertical"
                android:text="示范团队"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">
            <com.wongxd.partymanage.styleParty.view.RectImageView
                android:id="@+id/personal_honer_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"

                sw:type="round"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>